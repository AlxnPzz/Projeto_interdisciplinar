//Distancia Mínima em centimetros
const int distancia_c = 10; 

//Portas do Arduino

//Sensor
const int TRIG = 3;
const int ECHO = 2;

const int ledverde = 7;
const int ledvermelho = 8;
const int somdobuzzer = 9;

// Som
float seno;
int frequencia;

void setup() {
  Serial.begin(9600);
  
  // Entradas do sensor
  pinMode(TRIG,OUTPUT);
  pinMode(ECHO,INPUT);
  
  // Entradas do LED
  pinMode(ledverde, OUTPUT);
  pinMode(ledvermelho, OUTPUT);

  //somdobuzzer
  pinMode(somdobuzzer, OUTPUT); 
  
}

void loop() {
  int distancia = sensor_morcego(TRIG,ECHO);

    if(distancia <= distancia_c){
      digitalWrite(ledverde, LOW);
      digitalWrite(ledvermelho, HIGH);
      som();
    }
    else{
      digitalWrite(ledverde, HIGH);
      digitalWrite(ledvermelho, LOW);
      noTone(somdobuzzer);
    }
  delay(100);
  
}

int sensor_morcego(int pinotrig,int pinoecho){
  digitalWrite(pinotrig,LOW);
  delayMicroseconds(2);
  digitalWrite(pinotrig,HIGH);
  delayMicroseconds(10);
  digitalWrite(pinotrig,LOW);

  return pulseIn(pinoecho,HIGH)/58;
}

//Função para execução do Alarme Sonoro
void som(){
 for(int x=0;x<180;x++){
  seno=(sin(x*3.1416/1800));
  frequencia = 1000+(int(seno*100));
  tone(somdobuzzer,frequencia);
  delay(2);
}
}
